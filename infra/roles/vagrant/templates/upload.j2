#auto-generated by vagrant role

{% set f_env = '%s' | format(env) %}
{% set hosts = inventory[f_env].hosts %}

{% for key, value in hosts.items() %}
    {% set name = key %}
    {% set f_name = [name, "-", env] | join("") %}
    {% set dhcp_ip = dhcp_ips[f_name] %}

echo 'Copying host files to server {{f_name}} at vagrant@{{dhcp_ip}}:/home/vagrant/'

scp -i ~/.vagrant.d/insecure_private_key scripts/bootstrap-{{f_name}}.sh vagrant@{{dhcp_ip}}:/home/vagrant/
scp -i ~/.vagrant.d/insecure_private_key scripts/netplan-{{f_name}}.yaml vagrant@{{dhcp_ip}}:/home/vagrant/
scp -i ~/.vagrant.d/insecure_private_key ~/.ssh/id_rsa.pub vagrant@{{dhcp_ip}}:/home/vagrant/

{% endfor %}
